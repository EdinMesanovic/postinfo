{
  "compilerOptions": {
    /* File layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment (backend) */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Features */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",

    /* Source maps (debugging) */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
